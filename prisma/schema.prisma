generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id         String   @id @default(cuid())
  name       String
  maxMembers Int      @default(10)
  createdAt  DateTime @default(now())
  members    Member[]
}

model Member {
  id        String   @id @default(cuid())
  nickname  String
  mbti      String

  judgeStyle String @default("LOGIC") // LOGIC | PEOPLE
  infoStyle  String @default("IDEA")  // IDEA | FACT

  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  isOwner Boolean @default(false)

  @@index([groupId])
}
