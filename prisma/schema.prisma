generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ConflictStyle {
  DIRECT
  AVOID
  MEDIATE
  BURST
}

enum EnergyLevel {
  LOW
  MID
  HIGH
}

model Group {
  id         String   @id @default(cuid())
  name       String
  maxMembers Int      @default(10)
  createdAt  DateTime @default(now())
  members    Member[]
}

model Member {
  id        String   @id @default(cuid())
  nickname  String
  mbti      String

  ideaStrength   Int @default(50)
  factStrength   Int @default(50)
  logicStrength  Int @default(50)
  peopleStrength Int @default(50)
  ePercent       Int @default(50)
  nPercent       Int @default(50)
  tPercent       Int @default(50)
  jPercent       Int @default(50)
  conflictStyle  ConflictStyle @default(MEDIATE)
  conflictExplicit Boolean @default(false)
  energy         EnergyLevel   @default(MID)
  energyExplicit Boolean @default(false)

  judgeStyle String @default("LOGIC") // LOGIC | PEOPLE
  infoStyle  String @default("IDEA")  // IDEA | FACT

  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  isOwner Boolean @default(false)

  @@index([groupId])
}
